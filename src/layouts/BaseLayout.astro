---
import type { Locale } from '@/data/types';
import { labels } from '@/i18n/config';
import { toggleLangPath, withLangPrefix } from '@/i18n/routes';
import '@/styles/App.css';

interface Props {
  title: string;
  description?: string;
  lang?: Locale;
}

const { title, description = '', lang = 'cs' } = Astro.props as Props;
const base = import.meta.env.BASE_URL || '/';
const currentPath = Astro.url?.pathname ?? '/';
const otherLang: Locale = lang === 'cs' ? 'en' : 'cs';
const otherLangHref = base.replace(/\/$/, '') + toggleLangPath(currentPath.replace(base, '/'), otherLang);

const navLinks = [
  { href: withLangPrefix('/', lang), label: 'FrontKon 2026' },
  { href: withLangPrefix('/prednasky/', lang), label: lang === 'cs' ? 'Přednášky' : 'Talks' },
  { href: withLangPrefix('/workshopy/', lang), label: lang === 'cs' ? 'Workshopy' : 'Workshops' },
  { href: withLangPrefix('/blog/', lang), label: 'Blog' },
  { href: withLangPrefix('/tym/', lang), label: lang === 'cs' ? 'Tým' : 'Team' },
  { href: withLangPrefix('/archiv/', lang), label: lang === 'cs' ? 'Archiv' : 'Archive' },
];
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
  </head>
  <body>
    <div class="app">
      <header class="header">
        <a class="logo-link" href={`${base.replace(/\/$/, '')}${withLangPrefix('/', lang)}`}>
          <h1>FrontKon</h1>
        </a>
        <p class="subtitle">{lang === 'cs' ? 'Frontend konference' : 'Frontend conference'}</p>
      </header>

      <nav class="nav nav-spread">
        {navLinks.map((item) => {
          const isActive = currentPath.startsWith(item.href);
          return (
            <a class={`nav-button ${isActive ? 'active' : ''}`} href={`${base.replace(/\/$/, '')}${item.href}`}>
              {item.label}
            </a>
          );
        })}
        <div class="nav-right">
          <a class="nav-button" href={otherLangHref}>
            {labels[otherLang]}
          </a>
        </div>
      </nav>

      <main class="main">
        <slot />
      </main>

      <footer class="footer">
        <div class="footer-left">
          <p class="eyebrow">Frontendisti.cz</p>
          <p class="footer-text">Spolek Frontendisti.cz · Jurkovičova 988/26, Praha</p>
        </div>
        <div class="footer-links">
          <a href="https://www.frontkon.cz/">FrontKon</a>
          <a href="https://www.frontendisti.cz/">Frontendisti.cz</a>
          <a href="https://www.frontkec.cz/">Frontkec</a>
          <a href="https://www.frontkon.cz/">Code of Conduct</a>
        </div>
      </footer>
    </div>
  </body>
</html>


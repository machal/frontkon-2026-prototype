---
import type { Locale } from '@/data/types';
import { labels } from '@/i18n/config';
import { toggleLangPath, withLangPrefix } from '@/i18n/routes';
import { getTranslationObject } from '@/utils/i18n';
import '@/styles/App.css';

interface Props {
  title: string;
  description?: string;
  lang?: Locale;
}

const { title, description = '', lang = 'cs' } = Astro.props as Props;
const base = import.meta.env.BASE_URL || '/';
const currentPath = Astro.url?.pathname ?? '/';
const otherLang: Locale = lang === 'cs' ? 'en' : 'cs';
const otherLangHref = base.replace(/\/$/, '') + toggleLangPath(currentPath.replace(base, '/'), otherLang);

const nav = getTranslationObject(lang, 'common', 'nav');
const footer = getTranslationObject(lang, 'common', 'footer');
const social = getTranslationObject(lang, 'homepage', 'social');

const navLinks = [
  { href: withLangPrefix('/', lang), label: nav.home },
  { href: withLangPrefix('/prednasky/', lang), label: nav.talks },
  { href: withLangPrefix('/workshopy/', lang), label: nav.workshops },
  { href: withLangPrefix('/blog/', lang), label: nav.blog },
  { href: withLangPrefix('/tym/', lang), label: nav.team },
  { href: withLangPrefix('/archiv/', lang), label: nav.archive },
];
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
  </head>
  <body>
    <div class="app">
      <header class="header">
        <a class="logo-link" href={`${base.replace(/\/$/, '')}${withLangPrefix('/', lang)}`}>
          <h1>FrontKon</h1>
        </a>
        <p class="subtitle">{lang === 'cs' ? 'Frontend konference' : 'Frontend conference'}</p>
      </header>

      <nav class="nav nav-spread">
        {navLinks.map((item) => {
          const isActive = currentPath.startsWith(item.href);
          return (
            <a class={`nav-button ${isActive ? 'active' : ''}`} href={`${base.replace(/\/$/, '')}${item.href}`}>
              {item.label}
            </a>
          );
        })}
        <div class="nav-right">
          <a class="nav-button" href={otherLangHref}>
            {labels[otherLang]}
          </a>
        </div>
      </nav>

      <main class="main">
        <slot />
      </main>

      <footer class="footer">
        <div class="footer-content">
          <!-- Řada odkazů: Code of Conduct, Obchodní podmínky, Ochrana osobních údajů -->
          <div class="footer-links-row">
            <a href="https://www.frontkon.cz/">{footer.codeOfConduct}</a>
            <a href="https://www.frontkon.cz/">{footer.termsOfService}</a>
            <a href="https://www.frontkon.cz/">{footer.privacyPolicy}</a>
          </div>

          <!-- Sociální sítě - centrované -->
          <div class="footer-social">
            {(social.items || []).map((item: any) => (
              <a href={item.url} target="_blank" rel="noopener noreferrer" class="footer-social-link">
                {item.label}
              </a>
            ))}
          </div>
        </div>

        <!-- Info o spolku - malým centrovaným -->
        <div class="footer-organization">
          <p class="footer-org-text">{footer.organization}</p>
        </div>

        <!-- Odkazy Frontendisti.cz a Frontkec - úplně dolů -->
        <div class="footer-links-row" style="margin-top: 1rem;">
          <a href="https://www.frontendisti.cz/">Frontendisti.cz</a>
          <a href="https://www.frontkec.cz/">Frontkec</a>
        </div>
      </footer>
    </div>
  </body>
</html>


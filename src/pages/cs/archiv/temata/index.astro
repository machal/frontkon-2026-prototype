---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { frontKonData } from '@/data/frontkon-data';
import type { Locale } from '@/data/types';
import { getText } from '@/utils/content';

const lang: Locale = 'cs';
const base = import.meta.env.BASE_URL || '/';
const pref = (path: string) => `${base.replace(/\/$/, '')}${path}`;
---

<BaseLayout title="Témata v archivu" lang={lang}>
  <section class="section">
    <div class="section-header">
      <p class="eyebrow">Archiv</p>
      <h2>Témata 2020–2026</h2>
      <p class="subtitle">Proklikni na přednášky podle tématu.</p>
    </div>
    <div class="grid">
      {frontKonData.topics.map((topic) => {
        const count = frontKonData.talks.filter((t) => t.topicIds.includes(topic.id)).length;
        return (
          <a class="card card-link" href={pref('/cs/archiv/prednasky/')}>
            <h3>{getText(topic.name, lang)}</h3>
            <p class="modal-description">{count} přednášek</p>
          </a>
        );
      })}
    </div>
  </section>
</BaseLayout>


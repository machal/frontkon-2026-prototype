---
import BaseLayout from '@/layouts/BaseLayout.astro';
import type { Locale } from '@/data/types';

const lang: Locale = 'cs';
const team = [
  { name: 'Lucie K.', role: 'Program', company: 'FrontKon', bio: 'Kurátorka programu a vztahy se speakery.' },
  { name: 'Michal S.', role: 'Produkce', company: 'FrontKon', bio: 'Produkční řízení a stage management.' },
  { name: 'Denisa V.', role: 'UX', company: 'FrontKon', bio: 'Zážitek účastníků a obsah webu.' },
  { name: 'Adam P.', role: 'DevOps', company: 'FrontKon', bio: 'Build pipeline a CI/CD pro web.' },
  { name: 'Tereza L.', role: 'Komunita', company: 'FrontKon', bio: 'Komunikace s partnery a dobrovolníky.' },
  { name: 'Filip R.', role: 'Video', company: 'FrontKon', bio: 'Stream, záznamy a postprodukce.' },
];
---

<BaseLayout title="Tým FrontKon" lang={lang}>
  <section class="section">
    <div class="section-header">
      <p class="eyebrow">Tým</p>
      <h2>Organizátoři</h2>
      <p class="subtitle">Lidé, kteří dělají FrontKon možným.</p>
    </div>
    <div class="grid">
      {team.map((member) => (
        <div class="card">
          <div class="speaker-avatar-large">
            <div class="avatar-placeholder-image"></div>
          </div>
          <h3>{member.name}</h3>
          <p class="modal-company">{member.role} · {member.company}</p>
          <p class="modal-description">{member.bio}</p>
        </div>
      ))}
    </div>
  </section>
</BaseLayout>


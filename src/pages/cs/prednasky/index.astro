---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { frontKonData } from '@/data/frontkon-data';
import type { Locale } from '@/data/types';
import { getText, mapTopics } from '@/utils/content';

const lang: Locale = 'cs';
const year2026 = frontKonData.years.find((y) => y.id === '2026');
const talks2026 = frontKonData.talks.filter((t) => t.yearId === '2026').sort((a, b) => a.time.localeCompare(b.time));
const base = import.meta.env.BASE_URL || '/';
const pref = (path: string) => `${base.replace(/\/$/, '')}${path}`;

// Group by time slots
const timeSlots = ['09:00', '10:00', '11:00', '12:00', '13:00', '14:00', '15:00', '16:00', '17:00', '18:00', '19:00', '20:00'];

const byStage = ['A', 'B', 'C'].map((stage) => ({
  stage,
  slots: talks2026.filter((t) => t.stage === stage),
}));

// Create schedule grid
const schedule: { time: string; stages: { stage: string; talk: typeof talks2026[0] | null }[] }[] = [];

timeSlots.forEach((time) => {
  schedule.push({
    time,
    stages: ['A', 'B', 'C'].map((stage) => ({
      stage,
      talk: talks2026.find((t) => t.stage === stage && t.time === time) || null,
    })),
  });
});
---

<BaseLayout title="Program FrontKon 2026" lang={lang}>
  <section class="section">
    <div class="section-header">
      <p class="eyebrow">FrontKon 2026</p>
      <h2>Kompletní program</h2>
      <p class="subtitle">{year2026?.location} · {year2026?.date}</p>
    </div>

    <div class="schedule-container">
      {schedule.filter((slot) => slot.stages.some((s) => s.talk)).map((slot) => (
        <div class="schedule-row">
          <div class="schedule-time">{slot.time}</div>
          <div class="schedule-stages">
            {slot.stages.map(({ stage, talk }) => (
              <div class={`schedule-stage ${talk ? 'has-talk' : 'empty'}`}>
                {talk ? (
                  <a class="card-link schedule-talk" href={pref(`/cs/talks/${talk.id}/`)}>
                    <div class="schedule-stage-label">Stage {stage}</div>
                    <div class="schedule-talk-title">{getText(talk.title, lang)}</div>
                    <div class="schedule-talk-speaker">{frontKonData.speakers.find((s) => s.id === talk.speakerId)?.name}</div>
                    <div class="schedule-talk-topics">{mapTopics(frontKonData.topics, talk.topicIds, lang).join(', ')}</div>
                    {talk.language === 'en' && <div class="schedule-talk-lang">EN</div>}
                  </a>
                ) : (
                  <div class="schedule-empty">
                    <div class="schedule-stage-label">Stage {stage}</div>
                    <div class="schedule-empty-text">Pauza</div>
                  </div>
                )}
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </section>
</BaseLayout>

<style>
  .schedule-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 2rem;
  }

  .schedule-row {
    display: grid;
    grid-template-columns: 120px 1fr;
    gap: 1.5rem;
    align-items: start;
  }

  .schedule-time {
    font-weight: 600;
    font-size: 20px;
    color: rgb(0, 0, 34);
    padding-top: 0.5rem;
  }

  .schedule-stages {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
  }

  .schedule-stage {
    border: 1px solid rgba(0, 0, 34, 0.1);
    background: #f7f7f7;
    padding: 1rem;
    min-height: 120px;
  }

  .schedule-stage.empty {
    background: #f9f9f9;
    opacity: 0.6;
  }

  .schedule-stage-label {
    font-size: 14px;
    text-transform: uppercase;
    color: rgba(0, 0, 34, 0.6);
    margin-bottom: 0.5rem;
  }

  .schedule-talk {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .schedule-talk-title {
    font-weight: 600;
    font-size: 18px;
    color: rgb(0, 0, 34);
    margin-bottom: 0.5rem;
  }

  .schedule-talk-speaker {
    font-size: 16px;
    color: rgba(0, 0, 34, 0.7);
    margin-bottom: 0.5rem;
  }

  .schedule-talk-topics {
    font-size: 14px;
    color: rgba(0, 0, 34, 0.6);
    margin-bottom: 0.5rem;
  }

  .schedule-talk-lang {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    background: rgba(0, 0, 34, 0.1);
    font-size: 12px;
    font-weight: 600;
    margin-top: 0.5rem;
  }

  .schedule-empty-text {
    font-size: 14px;
    color: rgba(0, 0, 34, 0.5);
  }

  @media (max-width: 768px) {
    .schedule-row {
      grid-template-columns: 1fr;
    }

    .schedule-time {
      margin-bottom: 0.5rem;
    }

    .schedule-stages {
      grid-template-columns: 1fr;
    }
  }
</style>


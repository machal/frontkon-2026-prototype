---
import { defaultLanguage } from '@/i18n/config';

const base = import.meta.env.BASE_URL || '/';
// Construct redirect URL using BASE_URL
const basePath = base.endsWith('/') ? base : `${base}/`;
const redirectUrl = `${basePath}cs/`;
---

<html lang={defaultLanguage}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="refresh" content={`0; url=${redirectUrl}`} />
    <link rel="canonical" href={redirectUrl} />
    <script is:inline define:vars={{ redirectUrl }}>
      // Fallback redirect for browsers that don't support meta refresh
      window.location.replace(redirectUrl);
    </script>
  </head>
  <body>
    <p>Redirecting to <a href={redirectUrl}>Czech version</a>...</p>
  </body>
</html>
